{
  "name": "웬일 - 소식 전하는 고래",
  "description": "실시간 뉴스를 지속적으로 받아보세요.",
  "version": "1.5.1",
  "manifest_version": 2,
  
  "author": "cod.mon",

  "permissions": ["background", "storage", "tabs", "activeTab", "http://*/", "https://*/"],

  "background": {
    "scripts": ["./js/newsapi.js", "./js/default.js", "./js/background.js", "./js/reload.js"],
    "persistent": false 
  },

  "icons": { "16": "./png/codmon_whale_icon.png", "128": "./png/codmon_whale_icon.png" },

  "sidebar_action": {
    "default_page": "index.html",
    "default_icon" : {
      "16" : "./png/codmon_whale_icon.png"
    },
    "default_title" : "웬일 - 소식 전하는 고래"
  },

  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./js/contentscripts.js"],
      "all_frames": true
  }],

  "web_accessible_resources": ["window.html"]
}